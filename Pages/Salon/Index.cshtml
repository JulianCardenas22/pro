@page
@model pro.Pages.Salon.IndexModel
@{
    ViewData["Title"] = "Salones";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Style{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css" />
}

@section Scripts {
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>
    <script src="~/js/SalonIndex.js" type="text/javascript"></script>
}

<h2>Index</h2>

<div class="col-md-12">
    <div class="col-md-9">
        <div>
            <table id="tSalones" class="table table-striped table-bordered table-hover" cellspacing="0">
                <thead>
                    <tr>
                        <th>Editar</th>
                        <th>Salon</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Salones != null)
                    {
                        foreach (var salon in @Model.Salones)
                        {
                            <tr>
                                <td>
                                    <a name="btnEditar" Id="btnEditar"
                                       asp-page="/Salon/Modificar"
                                       asp-route-id="@salon.SalonId">
                                        <i class="glyphicon-pencil" style="color:blue"></i>
                                    </a>
                                    <a name="btnEliminar" Id="btnEliminar"
                                       asp-page="/Salon/Eliminar"
                                       asp-route-id="@salon.SalonId">
                                        <i class="glyphicon-trash" style="color:red" />
                                    </a>
                                </td>
                                <td>@salon.Nombre</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-3">
        <a class="btn btn-info"
           asp-page="/Salon/Agregar">Agregar</a>
    </div>
</div>