@page
@model pro.Pages.Maestro.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Style{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.css" />
}

@section Scripts {
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.18/datatables.min.js"></script>
    <script src="~/js/MaestroIndex.js" type="text/javascript"></script>
}

<h2>Index</h2>

<div class="col-md-12">
    <div class="col-md-9">
        <div>
            <table id="tMaestros" class="table table-striped table-bordered table-hover" cellspacing="0">
                <thead>
                    <tr>
                        <th>Editar</th>
                        <th>Titulo</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Maestros != null)
                    {
                        foreach (var maestro in @Model.Maestros)
                        {
                            <tr>
                                <td>
                                    <a name="btnEditar" Id="btnEditar"
                                       asp-page="/Maestro/Modificar"
                                       asp-route-id="@maestro.MaestroId">
                                        <i class="glyphicon-pencil" style="color:blue"></i>
                                    </a>
                                    <a name="btnEliminar" Id="btnEliminar"
                                       asp-page="/Maestro/Eliminar"
                                       asp-route-id="@maestro.MaestroId">
                                        <i class="glyphicon-trash" style="color:red"/>
                                    </a>
                                </td>
                                <td>@maestro.Titulo</td>
                                <td>@maestro.Nombre</td>
                                <td>@maestro.Apellido</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-3">
        <a class="btn btn-info"
           asp-page="/Maestro/AgregarMaestro"
           >Agregar</a>
    </div>
</div>